{
    "compilerOptions": {
        "compileOnSave": true,
        "outDir": "./dist/",
        "sourceMap": true,
        "noImplicitAny": true,
        "module": "commonjs",
        "target": "es2025",
        "jsx": "react",
        "lib": ["es6", "dom"],
        "allowSyntheticDefaultImports": true, /* Allow default imports from modules with no default export. This does not affect code emit, just typechecking. */
        "experimentalDecorators": true
    },
    "include": [
        "./src/**/*",
        "index.tsx"
    ],
    "exclude": [
        "node_modules",
        "build",
        "scripts",
        "pkgcmd",
        "server",
        "docs",
        "internals",
        "vendors"
    ]
}
